<UserControl x:Class="PromptRunner.Views.ExecutionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PromptRunner.Views"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="#ECF0F1">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="å®Ÿè¡Œçµæžœ" FontSize="28" FontWeight="Bold"
                      Foreground="#2C3E50" Margin="0,0,0,10"/>

            <!-- Status -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                          FontSize="14" Foreground="#7F8C8D" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ToggleViewModeCommand}"
                           Padding="15,8" Margin="5" FontSize="12"
                           Background="#E67E22" Foreground="White"
                           BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="ðŸ“ ãƒ—ãƒ¬ãƒ¼ãƒ³ãƒ†ã‚­ã‚¹ãƒˆ"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMarkdownView}" Value="False">
                                        <Setter Property="Content" Value="ðŸ“„ ãƒžãƒ¼ã‚¯ãƒ€ã‚¦ãƒ³"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="é¸æŠžã—ãŸçµæžœã‚’ã‚³ãƒ”ãƒ¼"
                           Command="{Binding CopyToClipboardCommand}"
                           Padding="15,8" Margin="5" FontSize="12"
                           Background="#9B59B6" Foreground="White"
                           BorderThickness="0" Cursor="Hand"/>

                    <Button Content="é¸æŠžã—ãŸçµæžœã‚’ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆ"
                           Command="{Binding ExportSelectedCommand}"
                           Padding="15,8" Margin="5" FontSize="12"
                           Background="#3498DB" Foreground="White"
                           BorderThickness="0" Cursor="Hand"/>

                    <Button Content="ã™ã¹ã¦ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆ"
                           Command="{Binding ExportAllCommand}"
                           Padding="15,8" Margin="5" FontSize="12"
                           Background="#16A085" Foreground="White"
                           BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- Results -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Result List -->
                <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7"
                       BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                    <ListBox ItemsSource="{Binding Results}"
                            SelectedItem="{Binding SelectedResult}"
                            BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ItemTitle}" FontSize="14" FontWeight="SemiBold"
                                                  Foreground="#2C3E50" TextWrapping="Wrap"/>

                                        <Border Margin="0,5,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#27AE60"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                                            <Setter Property="Background" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" Foreground="White" Padding="5,2">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="æˆåŠŸ"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSuccess}" Value="False">
                                                                <Setter Property="Text" Value="ã‚¨ãƒ©ãƒ¼"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <TextBlock Text="{Binding CompletedAt, StringFormat='{}{0:HH:mm:ss}'}"
                                                  FontSize="11" Foreground="#95A5A6" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Result Detail -->
                <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7"
                       BorderThickness="1" CornerRadius="5" Padding="20">
                    <Grid>
                        <!-- Plain Text View -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Style>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMarkdownView}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Style>
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedResult.ItemTitle}"
                                          FontSize="20" FontWeight="Bold" Foreground="#2C3E50"
                                          TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <Border Background="#F8F9FA" BorderBrush="#DEE2E6"
                                       BorderThickness="1" CornerRadius="3" Padding="15"
                                       Visibility="{Binding SelectedResult.IsSuccess, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ" FontSize="14" FontWeight="Bold"
                                                  Foreground="#E74C3C" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding SelectedResult.ErrorMessage, Mode=OneWay}"
                                                 FontSize="13" Foreground="#7F8C8D"
                                                 TextWrapping="Wrap" IsReadOnly="True"
                                                 BorderThickness="0" Background="Transparent"/>
                                    </StackPanel>
                                </Border>

                                <TextBox Text="{Binding SelectedResult.Content, Mode=OneWay}"
                                        FontSize="14" Foreground="#34495E"
                                        TextWrapping="Wrap" IsReadOnly="True"
                                        BorderThickness="0" Background="Transparent"
                                        VerticalScrollBarVisibility="Disabled"
                                        Visibility="{Binding SelectedResult.IsSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Markdown View -->
                        <wv2:WebView2 x:Name="MarkdownWebView">
                            <wv2:WebView2.Style>
                                <Style TargetType="wv2:WebView2">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMarkdownView}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </wv2:WebView2.Style>
                        </wv2:WebView2>
                    </Grid>
                </Border>
            </Grid>

            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="æœ€åˆã«æˆ»ã‚‹"
                       Command="{Binding BackCommand}"
                       Padding="20,12" Margin="5" FontSize="14"
                       Background="#3498DB" Foreground="White"
                       BorderThickness="0" Cursor="Hand"/>
            </Grid>

            <!-- Loading Indicator -->
            <Border Grid.Row="0" Grid.RowSpan="4"
                   Background="#80000000"
                   Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,20"/>
                    <TextBlock FontSize="16" Foreground="White" HorizontalAlignment="Center">
                        <Run Text="å®Ÿè¡Œä¸­: "/>
                        <Run Text="{Binding CurrentItemIndex}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding TotalItems}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="White"
                              HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

<Window x:Class="PromptRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PromptRunner"
        xmlns:views="clr-namespace:PromptRunner.Views"
        xmlns:vm="clr-namespace:PromptRunner.ViewModels"
        mc:Ignorable="d"
        Title="PromptRunner - あなたのアイデアをブレない形に" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:InputViewModel}">
            <views:InputView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChecklistViewModel}">
            <views:ChecklistView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExecutionViewModel}">
            <views:ExecutionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LogViewModel}">
            <views:LogView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="終了(_X)" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="設定(_S)">
                <MenuItem Header="API設定(_A)" Click="OpenSettings_Click"/>
                <MenuItem Header="チェックリスト管理(_C)" Click="OpenChecklistManager_Click"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="PromptRunner" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentStep, StringFormat='現在のステップ: {0}'}"
                              FontSize="14" Foreground="#ECF0F1" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="実行ログ履歴を表示"
                       Command="{Binding ShowLogCommand}"
                       Padding="15,10" FontSize="13"
                       Background="#16A085" Foreground="White"
                       BorderThickness="0" Cursor="Hand"
                       VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ContentControl Grid.Row="2" Content="{Binding CurrentView}" Margin="0"/>
    </Grid>
</Window>
